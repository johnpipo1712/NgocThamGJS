@model W_GJS.Models.O_PRODUCT

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}
@section Breadcrumb {
    <ul class="breadcrumb breadcrumb-page">
        <li class="breadcrumb-label text-light-gray">Bạn đang ở đây: </li>
        <li><a href="#">Trang chủ</a></li>
        <li class="active"><a href="#">Sản phẩm</a></li>
    </ul>

    <div class="page-header">

        <div class="row">
            <!-- Page header, center on small screens -->
            <h1 class="col-xs-12 col-sm-4 text-center text-left-sm"><i class="fa fa-suitcase page-header-icon"></i>&nbsp;&nbsp;Sản phẩm</h1>
        </div>
    </div>
}
<script src="~/ckeditor/ckeditor.js" type="text/javascript"></script>
<div class="row">
    <div class="col-sm-12">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="panel form-horizontal">

                <div class="panel-heading">
                    <span class="panel-title">Sửa</span>
                </div>

                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.PRODUCT_CD)
                <div class="panel-body">
                    <div class="form-group">
                        @Html.LabelFor(model => model.PRODUCT_CODE, new { @class = "control-label col-md-2" })
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.PRODUCT_CODE)
                            @Html.ValidationMessageFor(model => model.PRODUCT_CODE)
                        </div>
                    </div> <!-- / .form-group -->

                    <div class="form-group">
                        @Html.LabelFor(model => model.PRODUCT_NAME, new { @class = "control-label col-md-2" })
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.PRODUCT_NAME)
                            @Html.ValidationMessageFor(model => model.PRODUCT_NAME)
                        </div>
                    </div> <!-- / .form-group -->

                    <div class="form-group">
                        @Html.LabelFor(model => model.PRODUCT_TITLE, new { @class = "control-label col-md-2" })
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.PRODUCT_TITLE)
                            @Html.ValidationMessageFor(model => model.PRODUCT_TITLE)
                        </div>
                    </div> <!-- / .form-group -->

                    <div class="form-group">
                        @Html.LabelFor(model => model.CATEGORY_PRODUCT_DETAIL_CD, new { @class = "control-label col-md-2" })
                        <div class="col-sm-10">
                            @Html.DropDownList("CATEGORY_PRODUCT_DETAIL_CD", (SelectList)ViewBag.Dropdownlist)
                        </div>
                    </div> <!-- / .form-group -->


                    <div class="form-group">
                        @Html.LabelFor(model => model.CATEGORY_GRANULES_CD, new { @class = "control-label col-md-2" })
                        <div class="col-sm-10">
                            @Html.DropDownList("CATEGORY_GRANULES_CD", (SelectList)ViewBag.DropdownlistG)
                        </div>
                    </div> <!-- / .form-group -->

                    <div class="form-group">
                        @Html.LabelFor(model => model.WEIGHT, new { @class = "control-label col-md-2" })
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.WEIGHT)
                            @Html.ValidationMessageFor(model => model.WEIGHT)
                        </div>
                    </div> <!-- / .form-group -->

                    <div class="form-group">
                        @Html.LabelFor(model => model.QUANTITY, new { @class = "control-label col-md-2" })
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.QUANTITY)
                            @Html.ValidationMessageFor(model => model.QUANTITY)
                        </div>
                    </div> <!-- / .form-group -->

                    <div class="form-group">
                        @Html.LabelFor(model => model.PRICE, new { @class = "control-label col-md-2" })
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.PRICE)
                            @Html.ValidationMessageFor(model => model.PRICE)
                        </div>
                    </div> <!-- / .form-group -->

                    <div class="form-group">
                        @Html.LabelFor(model => model.PRICE_PROMOTION, new { @class = "control-label col-md-2" })
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.PRICE_PROMOTION)
                            @Html.ValidationMessageFor(model => model.PRICE_PROMOTION)
                        </div>
                    </div> <!-- / .form-group -->

                    <div class="form-group">
                        @Html.LabelFor(model => model.WAGES, new { @class = "control-label col-md-2" })
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.WAGES)
                            @Html.ValidationMessageFor(model => model.WAGES)
                        </div>
                    </div> <!-- / .form-group -->

                    <div class="form-group">
                        @Html.LabelFor(model => model.CURRENCY, new { @class = "control-label col-md-2" })
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.CURRENCY)
                            @Html.ValidationMessageFor(model => model.CURRENCY)
                        </div>
                    </div> <!-- / .form-group -->

                    <div class="form-group">
                        @Html.LabelFor(model => model.URL_IMAGE, new { @class = "control-label col-md-2" })
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.URL_IMAGE)
                            @Html.ValidationMessageFor(model => model.URL_IMAGE)
                        </div>
                    </div> <!-- / .form-group -->

                    <div class="form-group">
                        <label class="control-label col-md-2">Hình ảnh chi tiết 1</label>
                        <div class="col-sm-10">
                            @if (Model.D_PRODUCT_DETAIL.Count() >= 1)
                            {
                                <input type="text" name="file1" value="@Model.D_PRODUCT_DETAIL.ToList()[0].URL_IMAGE" id="file1" />
                            }
                            else
                            {
                                <input type="text" name="file1" value="" id="file1" />
                            }
                        </div>
                    </div> <!-- / .form-group -->

                    <div class="form-group">
                        <label class="control-label col-md-2">Hình ảnh chi tiết 2</label>
                        <div class="col-sm-10">
                            @if (Model.D_PRODUCT_DETAIL.Count() >= 2)
                            {
                                <input type="text" name="file2" value="@Model.D_PRODUCT_DETAIL.ToList()[1].URL_IMAGE" id="file2" />
                            }
                            else
                            {
                                <input type="text" name="file2" value="" id="file2" />
                            }
                        </div>
                    </div> <!-- / .form-group -->

                    <div class="form-group">
                        <label class="control-label col-md-2">Hình ảnh chi tiết 3</label>
                        <div class="col-sm-10">
                            @if (Model.D_PRODUCT_DETAIL.Count() >= 3)
                            {
                                <input type="text" name="file3" value="@Model.D_PRODUCT_DETAIL.ToList()[2].URL_IMAGE" id="file3" />
                            }
                            else
                            {
                                <input type="text" name="file3" value="" id="file3" />
                            }
                        </div>
                    </div> <!-- / .form-group -->

                    <div class="form-group">
                        <label class="control-label col-md-2">Hình ảnh chi tiết 4</label>
                        <div class="col-sm-10">
                            @if (Model.D_PRODUCT_DETAIL.Count() >= 4)
                            {
                                <input type="text" name="file4" value="@Model.D_PRODUCT_DETAIL.ToList()[3].URL_IMAGE" id="file4" />
                            }
                            else
                            {
                                <input type="text" name="file4" value="" id="file4" />
                            }
                        </div>
                    </div> <!-- / .form-group -->

                    <div class="form-group">
                        <label class="control-label col-md-2">Hình ảnh chi tiết 5</label>
                        <div class="col-sm-10">
                            @if (Model.D_PRODUCT_DETAIL.Count() >= 5)
                            {
                                <input type="text" name="file5" value="@Model.D_PRODUCT_DETAIL.ToList()[4].URL_IMAGE" id="file5" />
                            }
                            else
                            {
                                <input type="text" name="file5" value="" id="file5" />
                            }
                        </div>
                    </div> <!-- / .form-group -->
                    <div class="form-group">
                        @Html.LabelFor(model => model.QUANTITY_GRANULES, new { @class = "control-label col-md-2" })
                        <div class="col-sm-10">
                            @Html.TextAreaFor(model => model.QUANTITY_GRANULES, new { @id = "ckeContentQuantity" })
                            <script type="text/javascript">
                                CKEDITOR.replace("ckeContentQuantity");
                            </script>
                            @Html.ValidationMessageFor(model => model.QUANTITY_GRANULES)
                        </div>
                    </div> <!-- / .form-group -->
                    <div class="form-group">
                        @Html.LabelFor(model => model.PRODUCT_CONTENT, new { @class = "control-label col-md-2" })
                        <div class="col-sm-10">
                            @Html.TextAreaFor(model => model.PRODUCT_CONTENT, new { @id = "ckeContent" })
                            <script type="text/javascript">
                                CKEDITOR.replace("ckeContent");
                            </script>
                            @Html.ValidationMessageFor(model => model.PRODUCT_CONTENT)
                        </div>
                    </div> <!-- / .form-group -->


                    <div style="margin-bottom: 0;" class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <input type="submit" value="Sửa" class="btn btn-default" />
                        </div>
                    </div> <!-- / .form-group -->
                </div>
            </div>
        }
    </div>
</div>

<div>
    @Html.ActionLink("Trở về danh sách", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
