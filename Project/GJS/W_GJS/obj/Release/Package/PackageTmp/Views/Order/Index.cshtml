@model IEnumerable<W_GJS.Models.O_ORDER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}

@section Breadcrumb {
    <ul class="breadcrumb breadcrumb-page">
        <li class="breadcrumb-label text-light-gray">Bạn đang ở đây: </li>
        <li><a href="#">Trang chủ</a></li>
        <li class="active"><a href="#">Đơn đặt hàng</a></li>
    </ul>

    <div class="page-header">

        <div class="row">
            <!-- Page header, center on small screens -->
            <h1 class="col-xs-12 col-sm-4 text-center text-left-sm"><i class="fa fa-folder-open-o page-header-icon"></i>&nbsp;&nbsp;Đơn đặt hàng</h1>
            <div class="col-xs-12 col-sm-8">
                <div class="row">
                    <hr class="visible-xs no-grid-gutter-h">
                    <!-- Margin -->
                    <div class="visible-xs clearfix form-group-margin"></div>
                </div>
            </div>
        </div>
    </div>
}

<div class="row">
    <div class="table-primary">
        <div class="table-header">
            <div class="table-caption">
                Danh sách
            </div>
        </div>
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr>

                    <th>
                        @Html.DisplayNameFor(model => model.ORDER_CODE)
                    </th>
                    <th>
                        Tên khách hàng
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PHONE)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DELIVERY_ADDRESS)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EMAIL)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CREATEDATE)
                    </th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ORDER_CODE)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.O_CUSTOMER.CUSTOMER_NAME)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PHONE)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DELIVERY_ADDRESS)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EMAIL)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CREATEDATE)
                        </td>

                        <td>
                            @Html.ActionLink("Chi tiết", "Detail", new { ORDER_CD = item.ORDER_CD }) |
                            @if (item.ACTIVE == false)
                            {
                                @Html.ActionLink("Duyệt", "Active", new { ORDER_CD = item.ORDER_CD })
                            }
                            else
                            {
                                @Html.ActionLink("Không duyệt", "Deactive", new { ORDER_CD = item.ORDER_CD })
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="table-footer">

        </div>
    </div>
</div>
