@model W_GJS.Models.O_HOME_INTRODUCTION

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}

@section Breadcrumb {
    <ul class="breadcrumb breadcrumb-page">
        <li class="breadcrumb-label text-light-gray">Bạn đang ở đây: </li>
        <li><a href="#">Trang chủ</a></li>
        <li class="active"><a href="#">Nhóm slider trang chủ</a></li>
    </ul>

    <div class="page-header">

        <div class="row">
            <!-- Page header, center on small screens -->
            <h1 class="col-xs-12 col-sm-4 text-center text-left-sm"><i class="fa fa-dashboard page-header-icon"></i>&nbsp;&nbsp;Nhóm slider trang chủ</h1>
            <div class="col-xs-12 col-sm-8">
                <div class="row">
                    <hr class="visible-xs no-grid-gutter-h">
                    <!-- Margin -->
                    <div class="visible-xs clearfix form-group-margin"></div>
                </div>
            </div>
        </div>
    </div>
}

   

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="panel form-horizontal">
        <div class="panel-heading">
            <span class="panel-title">Sửa</span>
        </div>
        @Html.ValidationSummary(true)
        <div class="panel-body">
            <div class="form-group">
                @Html.LabelFor(model => model.O_HOME_INTRODUCTION_CONTENT, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.O_HOME_INTRODUCTION_CONTENT)
                    @Html.ValidationMessageFor(model => model.O_HOME_INTRODUCTION_CONTENT)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.O_HOME_INTRODUCTION_AUTHOR, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.O_HOME_INTRODUCTION_AUTHOR)
                    @Html.ValidationMessageFor(model => model.O_HOME_INTRODUCTION_AUTHOR)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.O_HOME_INTRODUCTION_PHOTO, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.O_HOME_INTRODUCTION_PHOTO)
                    @Html.ValidationMessageFor(model => model.O_HOME_INTRODUCTION_PHOTO)
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Lưu" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về danh sách", "Index")
</div>
