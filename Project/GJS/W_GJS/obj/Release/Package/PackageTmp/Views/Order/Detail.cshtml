@model IEnumerable<W_GJS.Models.D_ORDER_DETAIL>

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}
@section Breadcrumb {
    <ul class="breadcrumb breadcrumb-page">
        <li class="breadcrumb-label text-light-gray">Bạn đang ở đây: </li>
        <li><a href="#">Trang chủ</a></li>
        <li class="active"><a href="#">Chi tiết đơn đặt hàng</a></li>
    </ul>

    <div class="page-header">

        <div class="row">
            <!-- Page header, center on small screens -->
            <h1 class="col-xs-12 col-sm-4 text-center text-left-sm"><i class="fa fa-folder-open-o page-header-icon"></i>&nbsp;&nbsp;Đơn đặt hàng</h1>
            <div class="col-xs-12 col-sm-8">
                <div class="row">
                    <hr class="visible-xs no-grid-gutter-h">
                    <!-- Margin -->
                    <div class="visible-xs clearfix form-group-margin"></div>
                </div>
            </div>
        </div>
    </div>
}

<div class="row">
    <div class="table-primary">
        <div class="table-header">
            <div class="table-caption">
                Danh sách chi tiết đơn hàng
            </div>
        </div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        Hình ảnh 
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PRODUCT_CD)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SIZE)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.QUANTITY)
                    </th>
            
                  
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td align="center">
                            <img src="@item.O_PRODUCT.URL_IMAGE" height="50" width="50" />
                        </td>
                        <td valign="middle">
                            @Html.DisplayFor(modelItem => item.O_PRODUCT.PRODUCT_NAME)
                        </td>
                        <td valign="middle">
                            @Html.DisplayFor(modelItem => item.SIZE)
                        </td>
                        <td valign="middle">
                            @Html.DisplayFor(modelItem => item.QUANTITY)
                        </td>
                     

                    </tr>
                }
            </tbody>
        </table>
        <div class="table-footer">
        </div>
    </div>
</div>

