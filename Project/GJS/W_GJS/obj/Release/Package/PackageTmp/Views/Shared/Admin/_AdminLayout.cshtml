
@if (String.IsNullOrEmpty((string)Session[W_GJS.General.SessionConstants.LOGINED_ADMIN_KEY]))
{
    Response.Redirect(Url.Action("Index", "Home"));
}

<!DOCTYPE html>
<!--[if IE 8]>         <html class="ie8"> <![endif]-->
<!--[if IE 9]>         <html class="ie9 gt-ie8"> <![endif]-->
<!--[if gt IE 9]><!-->
