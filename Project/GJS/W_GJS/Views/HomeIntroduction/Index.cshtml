@model IEnumerable<W_GJS.Models.O_HOME_INTRODUCTION>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}

@section Breadcrumb {
    <ul class="breadcrumb breadcrumb-page">
        <li class="breadcrumb-label text-light-gray">Bạn đang ở đây: </li>
        <li><a href="#">Trang chủ</a></li>
        <li class="active"><a href="#">Nhóm slider trang chủ</a></li>
    </ul>

    <div class="page-header">

        <div class="row">
            <!-- Page header, center on small screens -->
            <h1 class="col-xs-12 col-sm-4 text-center text-left-sm"><i class="fa fa-dashboard page-header-icon"></i>&nbsp;&nbsp;Nhóm slider trang chủ</h1>
            <div class="col-xs-12 col-sm-8">
                <div class="row">
                    <hr class="visible-xs no-grid-gutter-h">
                    <!-- Margin -->
                    <div class="visible-xs clearfix form-group-margin"></div>
                </div>
            </div>
        </div>
    </div>
}
<div class="row">

    <div class="table-primary">
        <div class="table-header">
            <div class="table-caption">
                Danh sách
            </div>
        </div>
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.O_HOME_INTRODUCTION_CONTENT)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.O_HOME_INTRODUCTION_AUTHOR)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.O_HOME_INTRODUCTION_PHOTO)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.O_HOME_INTRODUCTION_CONTENT)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.O_HOME_INTRODUCTION_AUTHOR)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.O_HOME_INTRODUCTION_PHOTO)
                        </td>

                        <td>
                            @Html.ActionLink("Sửa", "Edit", new { O_HOME_INTRODUCTION_CD = item.O_HOME_INTRODUCTION_CD })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="table-footer">

        </div>
    </div>

</div>