<h2 class="owl-featured margin-bottom-30 margin-top20"><strong>Bộ sưu tập hình ảnh</strong></h2>

<div style="background-color: #111; opacity: 0.6;" class="demo-wrapper">
    <div id="gallery-container">
        
                <ul class="items--small">
                    @foreach (var itemimage in listimage)
                    {
                        if (itemimage.ACTIVE == true)
                        {
                            <li class="item"><a href="#"><img src="@itemimage.URL_IMAGE" alt=" @itemimage.O_CATEGORY_ALBUM.CATEGORY_ALBUM_NAME " /></a></li>

                        }

                    }
                </ul>
                <ul class="items--big">
                    @foreach (var itemimage in listimage)
                    {
                        if (itemimage.ACTIVE == true)
                        {
                            <li class="item--big">
                                <a href="#">
                                    <figure>
                                        <img width="800px" height="600px" src="@itemimage.URL_IMAGE" alt="" />
                                        <figcaption class="img-caption">
                                            @itemimage.O_CATEGORY_ALBUM.CATEGORY_ALBUM_NAME
                                        </figcaption>
                                    </figure>
                                </a>
                            </li>
                        }

                    }
                </ul>

          
        <div class="controls">
            <span class="control icon-arrow-left" data-direction="previous"></span>
            <span class="control icon-arrow-right" data-direction="next"></span>
            <span class="grid icon-grid"></span>
            <span class="fs-toggle icon-fullscreen"></span>
        </div>
    </div>

</div>
<script src="../SGallery/js/jquery-1.8.2.min.js"></script>
<script src="../SGallery/js/plugins.js"></script>
<script src="../SGallery/js/scripts.js"></script>
<script>
    $(document).ready(function () {

        $('#gallery-container').sGallery({
            fullScreenEnabled: true
        });

    });
</script>
