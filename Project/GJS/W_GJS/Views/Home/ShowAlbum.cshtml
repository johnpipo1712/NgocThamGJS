@{
    ViewBag.Title = "ShowAlbum";
    W_GJS.Models.GJSEntities gjs = new W_GJS.Models.GJSEntities();
    List<W_GJS.Models.O_CATEGORY_ALBUM> listcategory = gjs.O_CATEGORY_ALBUM.Where(t => t.ACTIVE == true).ToList();
    List<W_GJS.Models.O_ALBUM> listimage = gjs.O_ALBUM.Where(t => t.ACTIVE == true).ToList();

}

@section PageTitle {
    <section class="page-title">
        <div class="container">

            <header>

                <ul class="breadcrumb">
                    <!-- breadcrumb -->
                    <li><a href="@Url.Action("Index")">Trang Chủ</a></li>
                    <li class="active">Album</li>
                </ul><!-- /breadcrumb -->

                <h2>
                    <!-- Page Title -->
                    <strong>Album</strong>
                </h2><!-- /Page Title -->

            </header>

        </div>
    </section>
}
