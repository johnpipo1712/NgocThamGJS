    <!--SignalR script to update the chat page and send messages.-->

    <script>
        $(function () { //This section will run whenever we call Chat.cshtml page

            $("#divChat").hide();
            $("#PopupModalChat").modal();

            var objHub = $.connection.myHub;
            loadClientMethods(objHub);
            $.connection.hub.start().done(function () {

                loadEvents(objHub);

            });

        });


        function loadEvents(objHub) {

            $("#btnLogin").click(function () {

                var name = $.trim($('#Name').val())
                var pass = $('#Pass').val()
                var email = ""
                var phone = ""
                var status = "1"
                if (name.length > 0) {
                    // <<<<<-- ***** Return to Server [  Connect  ] *****
                    objHub.server.connect(name,pass, email, phone, status);

                }
                else {
                    alert("Vui lòng nhập thông tin");
                }

            });


            $('#btnSendMessage').click(function () {

                var msg = $("#txtMessageAdmin").val();

                if (msg.length > 0) {

                    var userName = $('#hUserName').val();
                    var pst = "1";
                    // <<<<<-- ***** Return to Server [  SendMessageToGroup  ] *****
                    objHub.server.sendMessageToGroup(userName, msg,pst);

                }
            });


            $("#txtPassword").keypress(function (e) {
                if (e.which == 13) {
                    $("#btnLogin").click();
                }
            });

            $("#txtMessageAdmin").keypress(function (e) {
                if (e.which == 13) {
                    $('#btnSendMessage').click();
                }
            });


        }



        function loadClientMethods(objHub) {

            objHub.client.NoExistAdmin = function () {
                 var divNoExist = $('<div style="color : red">Tên đăng nhập hoặc mật khẩu của bạn đã sai !!!</div>');
                $("#divChat").hide();
                $("#PopupModalChat").modal();

                $(divNoExist).hide();
                $('#divalarm').prepend(divNoExist);
                $(divNoExist).fadeIn(900).delay(10000).fadeOut(900);
                
            }

            objHub.client.getMessages = function (userName, message,pst) {
                var mySound = new buzz.sound("../Sound/sound.ogg");
             
                if (pst == '0') {
                    $('#discussion').append(' <li class="text-right"><strong>' + userName + '</strong>: ' + message + '</li>');
                }
                else {
                    $("#txtMessageAdmin").val('');
                    $('#discussion').append(' <li><strong>' + userName + '</strong>: ' + message + '</li>');
                }
                var height = $('#divMessage')[0].scrollHeight;
                $('#divMessage').scrollTop(height);
                mySound.play();
            }

            objHub.client.onConnected = function (id, userName, UserID, userGroup) {


                var strWelcome = 'Xin chào :' + userName;
                //$('#welcome').append('<div><p> Xin chào :' + userName + '</p></div>');
                $('#hId').val(id);
                $('#hUserId').val(UserID);
                $('#hUserName').val(userName);
                $('#hGroup').val(userGroup);


                $("#divChat").show();
                $("#divLogin").hide();


            }


        }


    </script>

