<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>Sign In</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0">

    <!-- Open Sans font from Google CDN -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,400,600,700,300&subset=latin,vietnamese" rel="stylesheet" type="text/css">

    <!-- Pixel Admin's stylesheets -->
    <link href="@Url.Content("~/Content/css/admin")/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="@Url.Content("~/Content/css/admin")/pixel-admin.min.css" rel="stylesheet" type="text/css">
    <link href="@Url.Content("~/Content/css/admin")/pages.min.css" rel="stylesheet" type="text/css">
    <link href="@Url.Content("~/Content/css/admin")/rtl.min.css" rel="stylesheet" type="text/css">
    <link href="@Url.Content("~/Content/css/admin")/themes.min.css" rel="stylesheet" type="text/css">
    <link href="@Url.Content("~/Content/css/admin")/self-styles.css" rel="stylesheet" type="text/css">

    <!--[if lt IE 9]>
        <script src="assets/javascripts/ie.min.js"></script>
    <![endif]-->

    <style>
        .page-signin .signin-container {
            margin: 150px auto;
        }
    </style>

</head>

<body class="theme-adminflare page-signin">
    <!-- Page background -->
    <div id="page-signin-bg">
        <!-- Background overlay -->
        <div class="overlay"></div>
        <!-- Replace this with your bg image -->
        <img src="@Url.Content("~/Content/images")/bg-login.jpg" alt="">
    </div>
    <!-- / Page background -->
    <!-- Container -->
    <div class="signin-container">

        <!-- Left side -->
        <div class="signin-info">
            <a href="index.html" class="logo">
                Ngọc Thẫm
            </a> <!-- / .logo -->
            <div class="slogan">
                Uy tín, chuyên nghiệp.
            </div> <!-- / .slogan -->
            <ul>
                <li><i class="fa fa-sitemap signin-icon"></i> Chi tiết 01</li>
                <li><i class="fa fa-file-text-o signin-icon"></i> Chi tiết 02</li>
                <li><i class="fa fa-outdent signin-icon"></i> Chi tiết 03</li>
                <li><i class="fa fa-heart signin-icon"></i> Chi tiết 04</li>
            </ul> <!-- / Info list -->
        </div>
        <!-- / Left side -->
        <!-- Right side -->
        <div class="signin-form">

            <!-- Form -->
            <form action="@Url.Action("ForgotPassword")" id="signin-form_id" method="post">
                <div class="signin-text">
                    <span>Quên mật khẩu?</span>
                </div> <!-- / .signin-text -->

                <div class="form-group w-icon">
                    Nhập chính xác email của Admin mà bạn đã đăng ký.
                </div> <!-- / Username -->

                <div class="form-group w-icon">
                    <input type="text" name="email" id="password_id" class="form-control input-lg" placeholder="Email">
                    <span class="fa fa-envelope signin-form-icon"></span>
                </div> <!-- / Password -->

                <div class="signin-text">
                    <span class="error">@Model.ErrorString</span>
                </div> <!-- / .signin-text -->

                <div class="form-actions">
                    <input type="submit" value="Gửi" class="signin-btn bg-primary">
                </div> <!-- / .form-actions -->
            </form>
            <!-- / Form -->
        </div>
        <!-- Right side -->
    </div>
    <!-- / Container -->
    <!-- Get jQuery from Google CDN -->
    <!--[if !IE]> -->
    <script type="text/javascript"> window.jQuery || document.write('<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js">'+"<"+"/script>"); </script>
