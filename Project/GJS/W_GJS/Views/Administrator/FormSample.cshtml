@{
    ViewBag.Title = "FormSample";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}

@section Breadcrumb {
    <ul class="breadcrumb breadcrumb-page">
        <li class="breadcrumb-label text-light-gray">Bạn đang ở đây: </li>
        <li><a href="#">Trang chủ</a></li>
        <li class="active"><a href="#">Form Elements</a></li>
    </ul>

    <div class="page-header">

        <div class="row">
            <!-- Page header, center on small screens -->
            <h1 class="col-xs-12 col-sm-4 text-center text-left-sm"><i class="fa fa-bolt page-header-icon"></i>&nbsp;&nbsp;Form Elements</h1>
        </div>
    </div>
}

<div class="row">
    <div class="panel">
        <div class="panel-heading">
            <span class="panel-title">Dark form states</span>
        </div>
        <div class="panel-body">
            <!-- Warning -->
            <div class="form-group has-warning dark">
                <label for="inputWarning-41" class="control-label">Input with warning</label>
                <input type="text" id="inputWarning-41" class="form-control">
                <p class="help-block">Example block-level help text here.</p>
            </div> <!-- / .form-group -->
            <!-- Error -->
            <div class="form-group has-error dark">
                <label for="inputError-41" class="control-label">Input with error</label>
                <input type="text" id="inputError-41" class="form-control">
                <p class="help-block">Example block-level help text here.</p>
            </div> <!-- / .form-group -->
            <!-- Success -->
            <div class="form-group has-success dark">
                <label for="inputSuccess-41" class="control-label">Input with success</label>
                <input type="text" id="inputSuccess-41" class="form-control">
                <p class="help-block">Example block-level help text here.</p>
            </div> <!-- / .form-group -->
        </div>
    </div>
</div>

<div class="row">
    <div class="panel">
        <div class="panel-heading">
            <span class="panel-title">Styled checkboxeds and radios</span>
        </div>
        <div class="panel-body no-padding-t">
            <!-- Checkboxes -->
            <h6 style="margin:20px 0 10px 0;" class="text-light-gray text-semibold text-xs">CHECKBOXES</h6>
            <!-- Checkbox styling -->
            <p>
                <label class="checkbox-inline">
                    <input type="checkbox" class="px">
                    <span class="lbl">One</span>
                </label>
                <label class="checkbox-inline">
                    <input type="checkbox" checked="checked" class="px">
                    <span class="lbl">Two</span>
                </label>
                <label class="checkbox-inline">
                    <input type="checkbox" class="px">
                    <span class="lbl">Three</span>
                </label>
            </p>
            <hr class="panel-wide">

            <!-- Radios -->
            <h6 style="margin:20px 0 10px 0;" class="text-light-gray text-semibold text-xs">RADIOS</h6>
            <!-- Radio styling -->
            <p>
                <label class="radio">
                    <input type="radio" class="px" name="styled-r1">
                    <span class="lbl">One</span>
                </label>
                <label class="radio">
                    <input type="radio" checked="checked" class="px" name="styled-r1">
                    <span class="lbl">Two</span>
                </label>
                <label class="radio">
                    <input type="radio" class="px" name="styled-r1">
                    <span class="lbl">Three</span>
                </label>
            </p>
        </div>
    </div>
</div>

<div class="row">
    <div class="panel">
        <div class="panel-heading">
            <span class="panel-title">Flat buttons</span>
        </div>
        <div class="panel-body buttons-with-margins">
            <button class="btn btn-flat">Default</button> &nbsp;&nbsp;
            <button class="btn btn-primary btn-flat">Primary</button> &nbsp;&nbsp;
            <button class="btn btn-info btn-flat">Info</button> &nbsp;&nbsp;
            <button class="btn btn-success btn-flat">Success</button> &nbsp;&nbsp;
            <button class="btn btn-warning btn-flat">Warning</button> &nbsp;&nbsp;
            <button class="btn btn-danger btn-flat">Danger</button>
        </div>
    </div>
</div>

<div class="row">
    <div class="table-primary">
        <div class="table-header">
            <div class="table-caption">
                Table
            </div>
        </div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Username</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>Mark</td>
                    <td>Otto</td>
                    <td>mdo</td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>Jacob</td>
                    <td>Thornton</td>
                    <td>fat</td>
                </tr>
                <tr>
                    <td>3</td>
                    <td>Larry</td>
                    <td>the Bird</td>
                    <td>twitter</td>
                </tr>
            </tbody>
        </table>
        <div class="table-footer">
            Footer
        </div>
    </div>
</div>