@model IEnumerable<W_GJS.Models.O_PRODUCT>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}
@section Scripts {
    <script type="text/javascript" src="@Url.Content("~/Self/product/js/script.js")"></script>
}

@section Breadcrumb {
    <ul class="breadcrumb breadcrumb-page">
        <li class="breadcrumb-label text-light-gray">Bạn đang ở đây: </li>
        <li><a href="#">Trang chủ</a></li>
        <li class="active"><a href="#">Sản phẩm</a></li>
    </ul>

    <div class="page-header">

        <div class="row">
            <!-- Page header, center on small screens -->
            <h1 class="col-xs-12 col-sm-4 text-center text-left-sm"><i class="fa fa-suitcase page-header-icon"></i>&nbsp;&nbsp;Sản phẩm</h1>
            <div class="col-xs-12 col-sm-8">
                <div class="row">
                    <hr class="visible-xs no-grid-gutter-h">
                    <div class="pull-right col-xs-12 col-sm-auto"><a style="width: 100%;" class="btn btn-primary btn-labeled" href="@Url.Action("Create", "Product")"><span class="btn-label icon fa fa-plus"></span>Tạo mới</a></div>
                    <!-- Margin -->
                    <div class="visible-xs clearfix form-group-margin"></div>
                </div>
            </div>
        </div>
    </div>
}

<div class="row">
    <div class="table-primary">
        <div class="table-header">
            <div class="table-caption">
                Danh sách
            </div>
        </div>
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.PRODUCT_CODE)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PRODUCT_NAME)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CATEGORY_PRODUCT_CD)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CATEGORY_PRODUCT_DETAIL_CD)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CATEGORY_GRANULES_CD)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.QUANTITY)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PRICE)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PRICE_PROMOTION)
                    </th>
                    <th>SP hiển thị</th>
                    <th>SP mới</th>
                    <th>SP nổi bật</th>
                    <th>SP bán chạy</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PRODUCT_CODE)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PRODUCT_NAME)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.O_CATEGORY_PRODUCT.CATEGORY_PRODUCT_NAME)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.O_CATEGORY_PRODUCT_DETAIL.CATEGORY_PRODUCT_DETAIL_NAME)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.O_CATEGORY_GRANULES.CATEGORY_GRANULES_NAME)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.QUANTITY)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.PRICE)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PRICE_PROMOTION)
                        </td>
                        <td>
                            @if (item.STATUS == 0)
                            {
                                <input type="checkbox" onclick="CheckDisplay(@item.PRODUCT_CD,this)" name="checkboxdisplay" />
                            }
                            else
                            {
                                <input type="checkbox" checked="checked" onclick="CheckDisplay(@item.PRODUCT_CD,this)" name="checkboxdisplay" />

                            }
                        </td>
                        <td>
                            @if (item.O_PRODUCT_NEW.Count == 0 || item.O_PRODUCT_NEW == null)
                            {
                                <input type="checkbox" onclick="CheckNew(@item.PRODUCT_CD,this)" name="checkboxnew" />
                            }
                            else
                            {
                                <input type="checkbox" checked="checked" onclick="CheckNew(@item.PRODUCT_CD,this)" name="checkboxnew" />

                            }
                        </td>
                        <td>
                            @if (item.O_PRODUCT_HIGHLIGHTS.Count == 0 || item.O_PRODUCT_HIGHLIGHTS == null)
                            {
                                <input type="checkbox" onclick="CheckHightlight(@item.PRODUCT_CD,this)" name="checkboxhightlight" />
                            }
                            else
                            {
                                <input type="checkbox" checked="checked" onclick="CheckHightlight(@item.PRODUCT_CD,this)" name="checkboxhightlight" />

                            }
                        </td>
                        <td>
                            @if (item.O_PRODUCT_SELLING.Count == 0 || item.O_PRODUCT_SELLING == null)
                            {
                                <input type="checkbox" onclick="CheckSelling(@item.PRODUCT_CD,this)" name="checkboxselling" />
                            }
                            else
                            {
                                <input type="checkbox" checked="checked" onclick="CheckSelling(@item.PRODUCT_CD,this)" name="checkboxselling" />

                            }
                        </td>
                        <td>
                            @Html.ActionLink("Sửa", "Edit", new { PRODUCT_CD = item.PRODUCT_CD }) |
                            @if (item.ACTIVE == false)
                            {
                                @Html.ActionLink("Kích hoạt", "Active", new { PRODUCT_CD = item.PRODUCT_CD })
                            }
                            else
                            {
                                @Html.ActionLink("Xóa", "Deactive", new { PRODUCT_CD = item.PRODUCT_CD })
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="table-footer">

        </div>
    </div>
</div>


